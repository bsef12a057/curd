{% extends 'base.html.twig' %}
 {% block body %}
 <div cclass="container">
     <div cclass="row">
            <h1 class="mt-5 mb-5">Create Form</h1>
                {% for messege in app.flashes ('notice') %}
                    <div class="alert alert-success">
                        {{messege}}
                    </div>
                {% endfor %}
            <div class="col-md-6 offset-md-3">
                {{form_start(form)}}
                        <div class="form-group">
                            {{form_label(form.title)}}
                            {{form_widget(form.title,{'attr':{'class':'form-control'}})}}
                        </div>
                        <div class="form-group">
                             {{form_label(form.contentt)}}
                            {{form_widget(form.contentt,{'attr':{'class':'form-control'}})}}
                        </div>
                        <div class="form-group">
                        <button class="btn btn-info mt-2 text-white">submit</button>
                        </div>
                {{form_end(form)}}

            </div>
     </div>

 </div>
 {% endblock %}